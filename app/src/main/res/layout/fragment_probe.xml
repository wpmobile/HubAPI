<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:columnCount="2"
              android:paddingLeft="@dimen/fragment_horizontal_margin"
              android:paddingRight="@dimen/fragment_horizontal_margin"
              android:paddingTop="@dimen/fragment_vertical_margin"
              android:paddingBottom="@dimen/fragment_vertical_margin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Device Status"
        android:layout_column="0"
        android:id="@+id/title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
    android:id="@+id/dummy"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Serial Number"
        android:id="@+id/serialNumberTitle"
        android:layout_column="0"
        android:layout_row="1"

        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="00 00 00 00"
        android:layout_column="1"
        android:layout_row="1"

        android:id="@+id/serialNumber"
        android:layout_alignTop="@+id/serialNumberTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Current Time"
        android:id="@+id/timeTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="1"
        android:layout_row="2"
        android:text="00:00:00"
        android:id="@+id/currentTime"
        android:layout_below="@+id/serialNumber"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="0"
        android:layout_row="3"
        android:text="Version"
        android:id="@+id/versionTitle"
        android:layout_below="@+id/timeTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="1"
        android:layout_row="3"
        android:text="1.0.0"
        android:id="@+id/version"
        android:layout_below="@+id/currentTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="0"
        android:layout_row="4"
        android:text="System Information"
        android:id="@+id/sysInfoTitle"
        android:layout_below="@+id/versionTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="0"
        android:layout_row="5"
        android:text="Operating Mode"
        android:id="@+id/modeTitel"
        android:layout_below="@+id/sysInfoTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="1"
        android:layout_row="5"
        android:text="Normal"
        android:id="@+id/mode"
        android:layout_below="@+id/sysInfoTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="0"
        android:layout_row="6"
        android:text="System Type"
        android:id="@+id/systemTypeTitle"
        android:layout_below="@+id/modeTitel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="1"
        android:layout_row="6"
        android:text="Unknown"
        android:id="@+id/systemType"
        android:layout_below="@+id/mode"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="0"
        android:layout_row="7"
        android:text="Serial Number"
        android:id="@+id/sysInfoSerialNumber"
        android:layout_below="@+id/systemTypeTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="1"
        android:layout_row="7"
        android:text="00 00 00 00"
        android:id="@+id/sysInfoSerialNo"
        android:layout_below="@+id/systemType"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="0"
        android:layout_row="8"
        android:text="Device Variant"
        android:id="@+id/deviceVariantTitle"
        android:layout_below="@+id/sysInfoSerialNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="1"
        android:layout_row="8"
        android:text="00:00:00:00"
        android:id="@+id/deviceVariant"
        android:layout_below="@+id/sysInfoSerialNo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="0"
        android:layout_row="9"
        android:text="Document Number"
        android:id="@+id/docNoTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/deviceVariantTitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="1"
        android:text="Unknown"
        android:layout_row="9"
        android:id="@+id/docNo"
        android:layout_alignTop="@+id/docNoTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="0"
        android:layout_row="10"
        android:text="Article Code"
        android:id="@+id/articleCodeTitle"
        android:layout_below="@+id/docNoTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Unknown"
        android:layout_column="1"
        android:layout_row="10"
        android:id="@+id/articleCode"
        android:layout_below="@+id/docNo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="0"
        android:layout_row="11"
        android:text="Firmware Revision"
        android:id="@+id/fwRevTitle"
        android:layout_below="@+id/articleCodeTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Unknown"
        android:layout_column="1"
        android:layout_row="11"
        android:id="@+id/fwRevNo"
        android:layout_below="@+id/articleCode"
        android:layout_alignRight="@+id/articleCode"
        android:layout_alignEnd="@+id/articleCode"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="0"
        android:layout_row="12"
        android:text="Build Date"
        android:id="@+id/buildDateTitle"
        android:layout_below="@+id/fwRevTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="1"
        android:layout_row="12"
        android:text="Unknown"
        android:id="@+id/buildDate"
        android:layout_below="@+id/fwRevNo"
        android:layout_alignRight="@+id/fwRevNo"
        android:layout_alignEnd="@+id/fwRevNo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="0"
        android:layout_row="13"
        android:text="Last Boot Date"
        android:id="@+id/lastDateTitle"
        android:layout_below="@+id/buildDateTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="1"
        android:layout_row="13"
        android:text="Unknown"
        android:id="@+id/lastDate"
        android:layout_below="@+id/buildDate"
        android:layout_alignRight="@+id/fwRevNo"
        android:layout_alignEnd="@+id/fwRevNo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="0"
        android:layout_row="14"
        android:text="Cash drawer status is unknown"
        android:id="@+id/cashDrawer"
        android:layout_below="@+id/lastDateTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_column="0"
        android:layout_row="15"
        android:text="Paper status is unknown"
        android:id="@+id/paperStatus"
        android:layout_below="@+id/cashDrawer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</GridLayout>